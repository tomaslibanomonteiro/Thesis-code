{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Tests",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "run_tests.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "subProcess": true
        },
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "subProcess": true
        },
        {
            "name": "main.py",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "subProcess": true
        }
    ]
}